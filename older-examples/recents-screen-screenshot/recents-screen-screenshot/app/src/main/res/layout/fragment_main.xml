<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have just opened a fragment!"
        android:textSize="24sp"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/fragmentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update text"
        app:layout_constraintBottom_toTopOf="@id/openInSecureActivityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentTextView" />

    <Button
        android:id="@+id/openInSecureActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open insecure activity"
        app:layout_constraintBottom_toTopOf="@id/openSecureActivityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentButton" />

    <Button
        android:id="@+id/openSecureActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open secure activity"
        app:layout_constraintBottom_toTopOf="@id/openInSecureFragmentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openInSecureActivityButton" />

    <Button
        android:id="@+id/openInSecureFragmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open insecure fragment"
        app:layout_constraintBottom_toTopOf="@id/openSecureFragmentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openSecureActivityButton" />

    <Button
        android:id="@+id/openSecureFragmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open secure fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openInSecureFragmentButton" />
</androidx.constraintlayout.widget.ConstraintLayout>