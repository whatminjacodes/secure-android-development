<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example app that shows how to hide views from Recents screen."
        android:textSize="24sp"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@id/openInSecureActivityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openInSecureActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open insecure activity"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/openSecureActivityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentTextView" />

    <Button
        android:id="@+id/openSecureActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open secure activity"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openInSecureActivityButton" />

</androidx.constraintlayout.widget.ConstraintLayout>